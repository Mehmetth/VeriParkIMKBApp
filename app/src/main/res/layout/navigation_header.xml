<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/nagivator_header_bg"
    android:paddingTop="75dp"
    android:paddingStart="20dp">

    <ImageView
        android:id="@+id/navigation_veripark_logo"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/veripark_logo"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/navigation_veripark_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/veri_park_red"
        app:layout_constraintTop_toBottomOf="@+id/navigation_veripark_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/main_view_title"
        android:textSize="15sp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/navigation_veripark_appname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/veri_park_red"
        app:layout_constraintTop_toBottomOf="@+id/navigation_veripark_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/app_name"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>